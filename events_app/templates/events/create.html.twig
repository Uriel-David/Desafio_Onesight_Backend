{% extends "base.html.twig"  %}

{% block body %}

    <div class="container">
        <div class="row">
            <h3 class="mt-5 mb-4">Create Event</h3>
            <div class="col-md-6 offset-md-3">
                {{ form_start(form) }}
                    <div class="form-group mt-2">
                        {{ form_label(form.event_name) }}
                        {{ form_widget(form.event_name, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group mt-2">
                        {{ form_label(form.event_description) }}
                        {{ form_widget(form.event_description, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group mt-2">
                        {{ form_label(form.expected_participants) }}
                        {{ form_widget(form.expected_participants, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group mt-2">
                        {{ form_label(form.date_event) }}
                        {{ form_widget(form.date_event) }}
                    </div>
                    <div class="form-group mt-2 d-none">
                        {{ form_label(form.approval) }}
                        {{ form_widget(form.approval) }}
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success mt-2 text-white">Submit</button>
                        <a class="btn btn-info mt-2" href="/events">Back</a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}